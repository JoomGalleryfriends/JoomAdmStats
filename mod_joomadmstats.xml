        </field>
        <field class="btn-group" name="comments_published" type="radio" default="0" description="MOD_JOOMADMSTATS_COMMENTSPUBLISHED_DESC" label="MOD_JOOMADMSTATS_COMMENTSPUBLISHED_LBL">
          <option value="0">JNO</option>
