          <option value="1">JYES</option>
        </field>
        <field class="btn-group" name="cats_published" type="radio" default="1" description="MOD_JOOMADMSTATS_CATSPUBLISHED_DESC" label="MOD_JOOMADMSTATS_CATSPUBLISHED_LBL">
